@page
@model IndexModel
@{
    ViewData["Title"] = "Core Gym";
}



@inject SignInManager<IdentityUser> SignInManager


<div id="hero-section">
    <div class="container">


        <div class="text-center">
            <h1 class="display-4">Core Gym</h1>
            <p>Välkommen till Core Gym!</p>

            <a href="#membership-section" class="sign-up-btn btn">
                Bli medlem
            </a>
        </div>

        <div class="carousel-container">
            <div class="carousel-inner-container">

                <div class="promotion-tip-box" id="ptb1">

                    <div class="carousel-imgbox carousel-imgbox-1" id="carousel-imgbox-1-id">
                        @* <img class="carousel-icon" src="/images/flaska_mini.png" alt=""> *@
                        <div class="carousel-icon-1" id="carousel-icon-id-1"></div>
                        <div class="carousel-text-1" id="carousel-text-id-1"></div>
                    </div>

                </div>
                <div class="promotion-tip-box" id="ptb2">

                    <div class="carousel-imgbox carousel-imgbox-2" id="carousel-imgbox-2-id">
                        @* <img class="carousel-icon" src="/images/flaska_mini.png" alt=""> *@
                        <div class="carousel-icon-2" id="carousel-icon-id-2"></div>
                        <div class="carousel-text-2" id="carousel-text-id-2"></div>
                    </div>

                </div>

                <div class="promotion-tip-box" id="ptb3">

                    <div class="carousel-imgbox carousel-imgbox-3" id="carousel-imgbox-3-id">
                        @* <img class="carousel-icon" src="/images/flaska_mini.png" alt=""> *@
                        <div class="carousel-icon-3" id="carousel-icon-id-3"></div>
                        <div class="carousel-text-3" id="carousel-text-id-3">Samla morgonpass med<br>Early Bird!</div>
                    </div>

                </div>

                <div class="promotion-tip-box" id="ptb4">

                    <div class="carousel-imgbox carousel-imgbox-4" id="carousel-imgbox-4-id">
                        @* <img class="carousel-icon" src="/images/flaska_mini.png" alt=""> *@
                        <div class="carousel-icon-4" id="carousel-icon-id-4"></div>
                        <div class="carousel-text-4" id="carousel-text-id-4"></div>
                    </div>

                </div>
                <div class="promotion-tip-box" id="ptb5">

                    <div class="carousel-imgbox carousel-imgbox-1" id="carousel-imgbox-5-id">
                        @* <img class="carousel-icon" src="/images/flaska_mini.png" alt=""> *@
                        <div class="carousel-icon-1" id="carousel-icon-id-5"></div>
                        <div class="carousel-text-1" id="carousel-text-id-5"></div>
                    </div>

                </div>

            </div>
        </div>


        <div class="infocards">
            <!-- Text -->
            <div class="infocard" id="infocard1">
                <h1>
                    Bästa Gymmet Ever
                </h1>
                <p>
                    Vi har den bästa utrustningen som finns!
                </p>
            </div>


            <!-- Bild -->
            <div class="infocard" id="infocard2">
                <img src="images/gym-picture1.jpg" />
            </div>


            <!-- Bild -->
            <div class="infocard" id="infocard3">
                <img src="images/gym-picture2.jpg" />
            </div>


            <!-- Text -->
            <div class="infocard" id="infocard4">
                <h1>
                    Massor att göra
                </h1>
                <p>
                    Vi erbjuder många olika aktiviteter.
                </p>
            </div>


            <div class="main-infocard">
                <h2>
                    Adress
                </h2>
                <div class="adress">
                    Programmeringsgatan 25
                </div>
                <div class="opening-hours">
                    <h2>
                        Öppettider
                    </h2>
                    <p>
                        Måndag - Fredag: 06.00 - 20.00 <br />
                        Lördag: 08.00 - 20.00 <br />
                        Söndag: 08.00 - 18.00
                    </p>
                </div>
            </div>


            <div class="infocard" id="infocard6">
                <img src="images/karta.png" width="500"/>
            </div>
        </div>


    </div>
</div>


<div id="membership-section">
    <div class="container">
        <h2>
            Medlemsskap
        </h2>

        <div class="membership-options">
            <div class="membership-option">
                <h3>
                    Enkelt
                </h3>
                <p>
                    Tillgång till gymmets alla maskiner
                </p>
                <h3>
                    30 kr/månad
                </h3>
                <button class="sign-up-btn btn">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a asp-page="/JoinMembership">
                            Gå med
                        </a>
                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Login">
                            Gå med
                        </a>
                    }
                </button>

            </div>
            <div class="membership-option">
                <h3>
                    Premium
                </h3>
                <p>
                    Allt som ingår i enkelt plus gymmets egna guide och lektioner
                </p>
                <h3>
                    60 kr/månad
                </h3>
                <button class="sign-up-btn btn">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a asp-page="/JoinMembership">
                            Gå med
                        </a>
                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Register">
                            Gå med
                        </a>
                    }

                </button>
            </div>
            <div class="membership-option">
                <h3>
                    Super Premium
                </h3>
                <p>
                    Allt som ingår i premium plus att du får välja musiken som spelas på högtalarna
                </p>
                <h3>
                    100 kr/månad
                </h3>
                <button class="sign-up-btn btn">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a asp-page="/JoinMembership">
                            Gå med
                        </a>
                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Register">
                            Gå med
                        </a>
                    }
                </button>
            </div>
        </div>
    </div>
</div>


<div id="qna-section">
    <div class="container">

        <h1>
            Vanliga frågor
        </h1>


        <div class="accordion" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Finns det duschar och omklädningsrum på gymmet?
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        Ja, flera stycken.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Är det här verkligen världens bästa gym?
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        Ja, det är vetenskapligt bevisat.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingThree">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                        Finns det gratis godis?
                    </button>
                </h2>
                <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        Nej.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/carousel.js" asp-append-version="true"></script>

