@page
@model EmailModel
@{
    ViewData["Title"] = "Ändra e-post";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="my-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    Ändra e-post
                </div>
                <div class="card-body">
                    <form id="email-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        @if (Model.IsEmailConfirmed)
                        {
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Nuvarande e-post</label>
                                <div class="input-group">
                                    <input asp-for="Email" class="form-control" disabled />
                                    <span class="input-group-text text-success fw-bold">✓</span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Nuvarande e-post</label>
                                <input asp-for="Email" class="form-control" disabled />
                                @* <button id="email-verification"
                                        type="submit"
                                        asp-page-handler="SendVerificationEmail"
                                        class="btn btn-link p-0 mt-1">
                                    Skicka bekräftelsemail
                                </button> *@
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="Input.NewEmail" class="form-label">Ny e-post</label>
                            <input asp-for="Input.NewEmail"
                                   class="form-control"
                                   autocomplete="email"
                                   aria-required="true" />
                            <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button id="change-email-button"
                                    type="submit"
                                    asp-page-handler="ChangeEmail"
                                    class="btn btn-primary">
                                Uppdatera e-post
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
