@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Ändra lösenord";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="my-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    Ändra lösenord
                </div>
                <div class="card-body">
                    <form id="change-password-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.OldPassword" class="form-label">Nuvarande lösenord</label>
                            <input asp-for="Input.OldPassword"
                                   type="password"
                                   class="form-control"
                                   autocomplete="current-password"
                                   aria-required="true" />
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.NewPassword" class="form-label">Nytt lösenord</label>
                            <input asp-for="Input.NewPassword"
                                   type="password"
                                   class="form-control"
                                   autocomplete="new-password"
                                   aria-required="true" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label">Bekräfta nytt lösenord</label>
                            <input asp-for="Input.ConfirmPassword"
                                   type="password"
                                   class="form-control"
                                   autocomplete="new-password"
                                   aria-required="true" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">
                                Uppdatera lösenord
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
