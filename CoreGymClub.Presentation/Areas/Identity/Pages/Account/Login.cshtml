@page
@model LoginModel

@{
    ViewData["Title"] = "Logga in";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

            <!-- Local login -->
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-primary text-white">
                    Logga in med ditt konto
                </div>
                <div class="card-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">E-post</label>
                            <input asp-for="Input.Email"
                                   class="form-control"
                                   autocomplete="username"
                                   aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Lösenord</label>
                            <input asp-for="Input.Password"
                                   type="password"
                                   class="form-control"
                                   autocomplete="current-password"
                                   aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                Kom ihåg mig
                            </label>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary w-100">
                            Logga in
                        </button>

                        <div class="mt-3">
                            <p>
                                @* <a id="forgot-password" asp-page="./ForgotPassword">
                                    Glömt ditt lösenord?
                                </a> *@
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                                    Registrera ny användare
                                </a>
                            </p>
                            <p>
                                @* <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">
                                    Skicka bekräftelsemail igen
                                </a> *@
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <!-- External logins -->
            @* <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    Logga in med annan tjänst
                </div>
                <div class="card-body">
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <p class="mb-0">
                                Inga externa inloggningstjänster är konfigurerade.
                            </p>
                        }
                        else
                        {
                            <form id="external-account"
                                  asp-page="./ExternalLogin"
                                  asp-route-returnUrl="@Model.ReturnUrl"
                                  method="post">
